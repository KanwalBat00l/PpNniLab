<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Server URL input -->
    <EditText
        android:id="@+id/etServerUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server URL"
        android:text="http://192.168.1.249:8080"
        android:inputType="textUri"
        android:drawableStart="@android:drawable/ic_menu_send"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <!-- Model input -->
    <EditText
        android:id="@+id/etModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Model name"
        android:text="default"
        android:inputType="text"
        android:drawableStart="@android:drawable/ic_menu_manage"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- Connect to server button -->
    <Button
        android:id="@+id/btnConnectServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to Server"
        android:drawableStart="@android:drawable/ic_menu_call"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="12dp"/>

    <!-- Select image button -->
    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Image"
        android:drawableStart="@android:drawable/ic_menu_gallery"
        android:enabled="false"
        android:backgroundTint="#03DAC5"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- Image preview -->
    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="#EEEEEE"
        android:layout_marginBottom="12dp"
        android:contentDescription="Selected Image Preview"/>

    <!-- Scrollable output box -->
    <ScrollView
        android:id="@+id/scrollOutput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F9F9"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:scrollbars="vertical"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false"/>
    </ScrollView>
</LinearLayout>
